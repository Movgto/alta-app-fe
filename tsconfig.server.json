{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2017",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
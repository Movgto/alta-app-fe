{
  "name": "functions",
  "scripts": {
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "copy-angular": "powershell -Command \"if (!(Test-Path dist)) { mkdir dist }; robocopy ../dist dist /E /NFL /NDL /NJH /NJS /nc /ns /np; if ($LASTEXITCODE -le 7) { exit 0 } else { exit $LASTEXITCODE }\"",
    "predeploy": "npm install && npm run copy-angular && npm run build"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "express": "^5.1.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "functions": "file:"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "private": true
}
